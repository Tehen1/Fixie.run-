{
  "name": "FixieRun - Move to Earn",
  "short_name": "FixieRun",
  "description": "Earn crypto tokens by moving with FixieRun. Track your workouts and get rewarded for your fitness journey.",
  "start_url": "/?source=pwa",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#181818",
  "theme_color": "#5D5CDE",
  "icons": [
    {
      "src": "/images/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/images/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/images/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/images/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/images/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/images/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/images/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/screenshot1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "FixieRun Home Screen"
    },
    {
      "src": "/screenshots/screenshot2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Workout Tracking"
    }
  ],
  "categories": ["fitness", "health", "sports", "crypto"],
  "shortcuts": [
    {
      "name": "Start Workout",
      "short_name": "Workout",
      "description": "Start a new workout session",
      "url": "/?startWorkout=true",
      "icons": [{ "src": "/images/workout-icon.png", "sizes": "192x192" }]
    },
    {
      "name": "View Stats",
      "short_name": "Stats",
      "description": "View your fitness statistics",
      "url": "/#analytics"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "scope": "/",
  "id": "/?source=pwa",
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+fixierun",
      "url": "/auth/callback?code=%s"
    }
  ],
  "capture_links": "new-client",
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/gpx+xml": [".gpx"],
        "application/json": [".json"],
        "text/csv": [".csv"]
      },
      "name": "Import Workout Files"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  "file_browser_handlers": [
    {
      "action": "/browse",
      "accept": {
        "application/gpx+xml": [".gpx"],
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ]
}
